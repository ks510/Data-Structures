/**
* ListNode implements a node for a singly-linked list
* @author Panchama
* @version March 2017
**/

public class ListNode {
    private Object data;
    private ListNode next;

    /**
     * Construct a new node with the given data and pointer
     * @param Object data
     * @param ListNode next
     */
    ListNode(Object data, ListNode next) {
        this.data = data;
        this.next = next;
    }

    /**
     * Set the next pointer to the specified node
     * @param ListNode node
     */
    public void setNext(ListNode node) {
        next = node;
    }

    /**
     * Get the next node
     * @return the next ListNode
     */
    public ListNode getNext() {
        return next;
    }
    
    /**
     * Get the data element of the node
     * @return Object data
     */
    public Object getData() {
        return data;
    }
    
    /**
     * Replace the data in the current node with new data
     */
    public void setData(Object data) {
        this.data = data;
    }

}
